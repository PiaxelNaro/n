{
    "presets": ["es2015", "react", "flow", "next/babel"],
    "plugins": [
        [
            "inline-react-svg",
            {
                "ignorePattern": ".*\/static\/.*"
            }
        ],
        [
            "module-resolver",
            {
                "root": ["."],
                "alias": {
                    "css": "./css"
                },
                "cwd": "babelrc"
            }
        ],
        [
            "wrap-in-js",
            {
                "extensions": ["css$", "scss$"]
            }
        ],
        [
            "styled-components",
            {
                "ssr": true,
                "displayName": true,
                "preprocess": false
            }
        ]
    ]
}
